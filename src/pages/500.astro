---
import ErrorView from "@/components/ErrorView.astro";
import Layout from "@/layouts/Layout.astro";

interface Props {
  error: unknown;
}
const { error } = Astro.props;
---

<Layout pageTitle="500" metaDescription="Internal Server Error">
  <ErrorView
    statusTitle="500 Internal Error"
    message={error instanceof Error ? error.message : "Unknown error"}
  />
</Layout>
